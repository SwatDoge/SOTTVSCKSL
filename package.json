{
	"icon": "https://github.com/SwatDoge/VSCode-krunkscript-linker/krunk_sync.png",
	"repository": "https://github.com/SwatDoge/VSCode-krunkscript-linker",
	"name": "krunkscript-linker",
	"displayName": "Krunkscript vscode linker [Beta]",
	"description": "Link your vscode to krunkscript!",
	"version": "1.0.0",
	"engines": {
		"vscode": "^1.62.0"
	},
	"categories": [
		"Programming Languages"
	],
	"extensionPack": [
		"SLxTnT.krunkscript-validator",
		"Yendis.krunkscript-hightlighter"
	],
	"activationEvents": [
		"onCommand:krunkscript-linker.connect",
		"onStartupFinished"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "krunkscript-linker.connect",
				"title": "create krunkscript connection"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "yarn run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"compile-tests": "tsc -p . --outDir out",
		"watch-tests": "tsc -p . -w --outDir out",
		"pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
		"lint": "eslint src --ext ts"
	},
	"devDependencies": {
		"@types/glob": "^7.1.4",
		"@types/mocha": "^9.0.0",
		"@types/node": "14.x",
		"@types/tmp": "^0.2.2",
		"@types/vscode": "^1.62.0",
		"@types/ws": "^8.2.0",
		"@typescript-eslint/eslint-plugin": "^5.1.0",
		"@typescript-eslint/parser": "^5.1.0",
		"@vscode/test-electron": "^1.6.2",
		"eslint": "^8.1.0",
		"eslint-plugin-eslint-snake-case": "^0.0.6",
		"glob": "^7.1.7",
		"mocha": "^9.1.3",
		"tmp": "^0.2.1",
		"ts-loader": "^9.2.5",
		"typescript": "^4.4.4",
		"webpack": "^5.52.1",
		"webpack-cli": "^4.8.0",
		"ws": "^8.2.3"
	},
	"dependencies": {}
}
